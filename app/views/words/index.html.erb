<%- model_class = Word -%>
<div class="page-header">
  <h1>WÃ¶rter</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:lemma) %></th>
      <th><%= model_class.human_attribute_name(:long_lemma) %></th>
      <th><%= model_class.human_attribute_name(:translation) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= link_to word.lemma, word_path(word) %></td>
        <td><%= word.long_lemma %></td>
        <td><%= word.translation %></td>
        <td class="actions">
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_word_path(word), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      word_path(word),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-default btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_word_path,
            :class => 'btn btn-default btn-primary' %>
