<%= simple_form_for @word, wrapper: :horizontal_form,
                    html: { class: 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  
  <div class="form-inputs"> 
    <%= f.input :lemma %>
    <%= f.input :long_lemma %>
    <%= f.input :translation %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-default btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                words_path, :class => 'btn btn-default' %>
  </div>
<% end %>
