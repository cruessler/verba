<%- model_class = Phrase -%>
<div class="page-header">
  <h1>Wendungen</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:lemma) %></th>
      <th><%= model_class.human_attribute_name(:phrase) %></th>
      <th><%= model_class.human_attribute_name(:translation) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @phrases.each do |phrase| %>
      <tr>
        <td><%= link_to phrase.lemma, phrase_path(phrase) %></td>
        <td><%= phrase.phrase %></td>
        <td><%= phrase.translation %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_phrase_path(phrase), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      phrase_path(phrase),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-default btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_phrase_path,
            :class => 'btn btn-default btn-primary' %>
