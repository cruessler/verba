<div class="devise-links">
  <%- if controller_name != 'sessions' %>
    <%= link_to 'Anmelden', new_session_path(resource_name), class: 'btn btn-default' %>
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to 'Registrieren', new_registration_path(resource_name), class: 'btn btn-default' %>
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to 'Passwort vergessen?', new_password_path(resource_name), class: 'btn btn-default' %>
  <% end -%>
</div>
