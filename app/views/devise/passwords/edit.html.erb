<div class="row">
  <div class="col-md-6">
    <div class="page-header">
      <h1>Passwort ändern</h1>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), method: :put,
                        wrapper: :horizontal_form,
                        html: { class: 'form-horizontal' }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password, label: 'Neues Passwort', required: true, autofocus: true %>
        <%= f.input :password_confirmation, label: 'Neues Passwort bestätigen', required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, 'Passwort ändern' %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>
