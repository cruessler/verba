<div class="row">
  <div class="col-md-6">
    <div class="page-header">
      <h1>Hallo <%= resource.email %></h1>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), method: :put,
                        wrapper: :horizontal_form,
                        html: { class: 'form-horizontal' }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>

        <%= f.input :password, autocomplete: 'off', hint: 'lassen Sie das Feld leer, wenn Sie das Passwort nicht ändern wollen', required: false %>
        <%= f.input :password_confirmation, required: false %>
        <%= f.input :current_password, hint: 'geben Sie Ihr aktuelles Passwort ein', required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, 'Speichern' %>
      </div>
    <% end %>

    <h3>Account löschen</h3>

    <%= link_to 'Account löschen', registration_path(resource_name), data: { confirm: 'Sind Sie sicher?' }, method: :delete, class: 'btn btn-default' %>
  </div>
</div>
