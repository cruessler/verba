#!/usr/bin/env ruby
require 'pathname'
require 'fileutils'
include FileUtils

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('../../', __FILE__)

def system!(*args)
  system(*args) || abort("\n== Command #{args} failed ==")
end

chdir APP_ROOT do
  # This script is a starting point to setup your application.
  # Add necessary setup steps to this file.

  puts '== Installing dependencies =='
  system! 'gem install bundler --conservative'
  system('bundle check') || system!('bundle install --path vendor/bundle')

  # Install JavaScript dependencies using npm.
  # Assumes the npm executable is on your $PATH.
  puts "\n== Installing JavaScript dependencies =="
  system('npm install')


  puts "\n== Copying sample files =="
  unless File.exist?('config/secrets.yml')
    cp 'config/secrets.sample.yml', 'config/secrets.yml'
  end

  puts "\n== Secrets =="
  puts "\nNo secrets are provided by default. Edit config/secrets.yaml to change that."
  puts "\nAfterwards, procede by running `bin/rails db:setup` for the environments you want to use."
end
